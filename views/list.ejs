<h1 class="display-4">Articles</h1>
<table class="tabel table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Body</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% articles.forEach(function(article){%>
    <tr>
      <td><%=article.id%></td>
      <td><%=article.title%></td>
      <td><%=article.body%></td>
      <td>
        <a class="btn btn-sm btn-info" href="/articles/edit/<%=article.id%>">Edit</a>
        <form action="/articles/delete/<%=article.id%>" method="POST">
          <input type="submit" name="Delete" value="Delete">
        </form>
      </td>
    </tr>
    <%})%>
    <tr></tr>
  </tbody>
</table>
